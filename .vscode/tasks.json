	"version": "2.0.0",
	"tasks": [
        {
            "label": "build-machine", // Name of the task
            "type": "shell", // Use a shell task to run your make command
            "command": "make build", // Your build command
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always", // Show the terminal output for the build

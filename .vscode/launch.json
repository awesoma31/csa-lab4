{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug translator",
            "type": "go",
            "request": "launch",
            "mode": "auto", 
            "program": "${workspaceFolder}/cmd/translator/main.go", // Path to your compiled binary

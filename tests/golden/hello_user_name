//print("Say my name");
let name = "";
let allCharsRead  = 0;
let a = "";

while allCharsRead == 0 {
    // wait interruptions till all symbols are read
}

let c = "You're goddamn right, ";
let b = addStr(c, a);
exit;



interruption 0 {
    a = read();
    // maybe returning may come from IR controller;
    if a == -1 {
        allCharsRead = 1;
        iret;
    }
    name = addStr(name, a); // should concatenate strings (and move them to heap)
    iret;
}
